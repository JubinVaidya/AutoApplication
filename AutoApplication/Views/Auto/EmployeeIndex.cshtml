@using PagedList.Mvc;
@model PagedList.IPagedList<AutoApplication.DataLibrary.Model.Auto>


@{
    ViewBag.Title = "AdminIndex";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<style>

    .vert-spacing {
        margin-top: 1cm;
        margin-bottom: 1cm;
    }
</style>
<h2 class="vert-spacing">Autos In Inventory</h2>

@using (Html.BeginForm("Index", "Auto", FormMethod.Get))
{
    <p>
        Search By: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Maker Name", "Index", new { sortOrder = ViewBag.AutoMakerNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Model Name", "Index", new { sortOrder = ViewBag.AutoModelNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Maker Year", "Index", new { sortOrder = ViewBag.AutoYearNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Usage Status", "Index", new { sortOrder = ViewBag.AutoUsageSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Listed Price", "Index", new { sortOrder = ViewBag.AutoListPriceSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>

        <th>
            @Html.ActionLink("Vin Number", "Index", new { sortOrder = ViewBag.AutoVinSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>
</table>

<table>
    @{
        int col1 = 0;
        int col2 = 0;
        <tr class="car-tiles-holder-row">
            <td class="car-tiles-holder-data">
                <table class="car-tiles-holder-table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (@col1 % 2 == 0)
                                {
                                    <table class="car-tiles">
                                        <tr>
                                            <td rowspan="6" class="car-tiles-image">

                                                <img class="car-tiles-image" src="https://www.automobilemag.com/uploads/sites/11/2019/09/2020-Toyota-Camry-TRD-in-supersonic-red-with-midnight-black-metallic-roof-4.jpg?fit=around%7C875:492">
                                            </td>
                                            <th colspan="2" class="car-tiles-text-bold">
                                                @Html.DisplayFor(modelItem => item.AutoMakerName)
                                                @Html.DisplayFor(modelItem => item.AutoModelName)
                                                @Html.DisplayFor(modelItem => item.AutoModelYear)
                                            </th>
                                        </tr>

                                        <tr>
                                            <td class="car-tiles-text-bold">Name:</td>
                                            <td class="car-tiles-text">
                                                @Html.DisplayFor(modelItem => item.AutoMakerName)
                                                @Html.DisplayFor(modelItem => item.AutoModelName)
                                                @Html.DisplayFor(modelItem => item.AutoModelYear)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-text-bold">Usage Status:</td>
                                            <td class="car-tiles-text">@Html.DisplayFor(modelItem => item.AutoUsageStatus)</td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-text-bold">Listed Prices:</td>
                                            <td class="car-tiles-text">@Html.DisplayFor(modelItem => item.AutoListedPrice)</td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-buttons-arrangement" colspan="3">
                                                @Html.ActionLink("Details", "Details", new { id = item.AutoID }, new { @class = "btn btn-info" })
                                            </td>
                                        </tr>
                                    </table>
                                }
                            </td>
                        </tr>
                        col1 = col1 + 1;
                    }
                </table>
            </td>
            <td class="car-tiles-holder-data">
                <table class="car-tiles-holder-table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="car-tiles-holder-data">
                                @if (@col1 % 2 != 0)
                                {
                                    <table class="car-tiles">
                                        <tr>
                                            <td rowspan="6" class="car-tiles-image">

                                                <img class="car-tiles-image" src="https://www.automobilemag.com/uploads/sites/11/2019/09/2020-Toyota-Camry-TRD-in-supersonic-red-with-midnight-black-metallic-roof-4.jpg?fit=around%7C875:492">
                                            </td>
                                            <th colspan="2" class="car-tiles-text-bold">
                                                @Html.DisplayFor(modelItem => item.AutoMakerName)
                                                @Html.DisplayFor(modelItem => item.AutoModelName)
                                                @Html.DisplayFor(modelItem => item.AutoModelYear)
                                            </th>
                                        </tr>

                                        <tr>
                                            <td class="car-tiles-text-bold">Name:</td>
                                            <td class="car-tiles-text">
                                                @Html.DisplayFor(modelItem => item.AutoMakerName)
                                                @Html.DisplayFor(modelItem => item.AutoModelName)
                                                @Html.DisplayFor(modelItem => item.AutoModelYear)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-text-bold">Usage Status:</td>
                                            <td class="car-tiles-text">@Html.DisplayFor(modelItem => item.AutoUsageStatus)</td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-text-bold">Listed Prices:</td>
                                            <td class="car-tiles-text">@Html.DisplayFor(modelItem => item.AutoListedPrice)</td>
                                        </tr>
                                        <tr>
                                            <td class="car-tiles-buttons-arrangement" colspan="3">
                                                @Html.ActionLink("Details", "Details", new { id = item.AutoID }, new { @class = "btn btn-info" })
                                            </td>
                                        </tr>
                                    </table>
                                }
                            </td>
                        </tr>
                        col1 = col1 + 1;
                    }
                </table>
            </td>
        </tr>
    }
</table>


@if (Model.Count == 0)
{
    <h4 class="text-primary">
        Sorry!
    </h4>
    <h5 class="text-secondary"> No Result Found.</h5>
}

<table class="table">
    <tr>
        <td>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </td>
        <td>
            <div class="bottom_btns float-right">
                <p class"text-right" style="margin-top:0.8cm">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-danger" })
                </p>
            </div>
        </td>
    </tr>
</table>


