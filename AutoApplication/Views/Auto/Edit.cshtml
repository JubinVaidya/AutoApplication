            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.AutoListedPrice)
                @Html.EditorFor(model => model.AutoListedPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AutoListedPrice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.AutoVinNumber)
                @Html.EditorFor(model => model.AutoVinNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AutoVinNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
</div>

    <div class="row justify-content-end">
        <div class="col-4 width50" style="text-align: right">
            <input type="submit" value="Edit" class="btn btn-primary width20" />
            @Html.ActionLink("Back to List", "Index", "Auto", null, new { @class = "btn btn-danger width30" })
        </div>
    </div>


</div>
}

